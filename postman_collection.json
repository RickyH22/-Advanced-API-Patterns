{
  "info": {
    "name": "Task Management API",
    "description": "Complete API collection with all endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Complete documentation\",\n  \"description\": \"Write comprehensive README\",\n  \"status\": \"todo\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks"]
            }
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks?skip=0&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks"],
              "query": [
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "todo",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Task",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "1"]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated title\",\n  \"description\": \"Updated description\",\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "1"]
            }
          }
        },
        {
          "name": "Partial Update Task",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"done\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "1"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "1"]
            }
          }
        },
        {
          "name": "Get All Tasks (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/tasks/admin/all",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tasks", "admin", "all"]
            }
          }
        }
      ]
    },
    {
      "name": "Health & Async",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Detailed Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/health/detailed",
              "host": ["{{base_url}}"],
              "path": ["health", "detailed"]
            }
          }
        },
        {
          "name": "Async External API",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/async/external",
              "host": ["{{base_url}}"],
              "path": ["async", "external"]
            }
          }
        },
        {
          "name": "Background Task",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/async/background-task?task_name=test_task",
              "host": ["{{base_url}}"],
              "path": ["async", "background-task"],
              "query": [
                {
                  "key": "task_name",
                  "value": "test_task"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "admin_token",
      "value": ""
    }
  ]
}
